{
  "hosting": {
    "public": "hopper_backend/public",
    "rewrites": [
      {
        "source": "**",
        "function": "helloWorld"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "functions": {
    "source": "functions"
  },
  "emulators": {
    "functions": {
      "port": 3005
    },
    "ui": {
      "enabled": true
    },
    "hosting": {
      "port": 5005
    }
  }
}
